{
    "compilerOptions": {
        "outDir": "./dist/",
        "noImplicitAny": true,
        "module": "ESNext",
        "target": "ESNext",
        "jsx": "react-jsx",
        "allowJs": true,
        "strict": true,
        "moduleResolution": "node",
        "baseUrl": ".",
        "paths": {
            "@/*": ["./src/*"]
        },
        // allows to work with commonJS modules using 'import' instead of 'require'
        "esModuleInterop": true,

        // allows to use default imports from packages which don't support it
        // for example "import React from 'react';" instead of "import * as React from 'react';"
        "allowSyntheticDefaultImports": true,
        "isolatedModules": true
    },
    "ts-node": {
        "compilerOptions": {
            "module": "CommonJS"
        }
    },
    "include": [
        "./config/jest/setupTests.ts",
        "./src/**/*.tsx",
        "./src/**/*.ts"
    ]
}
